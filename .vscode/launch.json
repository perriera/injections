    "version": "0.2.0",
    "configurations": [
        {
            "name": "run-unittests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/run-unittests-${workspaceRootFolderName}",
            "args": [
                "[mold retag::Interface]"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build C++ project",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "run-unittests_i386",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/run-unittests-${workspaceRootFolderName}_i386",
            "args": [
                "[mold retag::Interface]"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build C++ project",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "retag",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/retag",
            "args": [
                "build/testarea/libsisutil.so",
                "8.9.10"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build C++ project",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "reensure_app",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/reensure_app",
            "args": [
                "data/pgn/kasparov_muratkuliev_1973.PGN"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build C++ project",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}